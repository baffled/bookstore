TERM 132,66
* <<C2,OrderId>>
* <<C3,ClientId>>
IF <<C2,OrderId>> = "ALL" THEN GO SEL_CLIENT
SELECT U2_ORDERS "<<C2,OrderId>>"
GO DO_SORT
SEL_CLIENT:
IF <<C2,ClientId>> = "ALL" THEN GO DO_SORT
SELECT U2_ORDERS WITH CLIENT_ID = "<<C2,ClientId>>"
DO_SORT:
SORT U2_ORDERS _
 HEADING "Sales Order History" _
 BY-DSND ORDER_DATE _
 ORDER_DATE ORDER_STATUS CLIENT_ID CLIENT_NAME _
 SHIP_ID SHIP_COST BALANCE _
 BOOK_ID BOOK_TITLE QTY PRICE LINE_TOTAL TAX_RATE LINE_TAX _
 FOOTER "Page 'P'"



